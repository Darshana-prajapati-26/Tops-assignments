#include <stdio.h>

int main() {
    int num, i, count = 0;

    // ===== PART 1: Check if a number is prime =====
    printf("Enter a number to check if it is prime: ");
    scanf("%d", &num);

    if (num <= 1) {
        printf("%d is NOT a prime number.\n", num);
    } else {
        count = 0;
        for (i = 1; i <= num; i++) {
            if (num % i == 0) {
                count++;
            }
        }
        if (count == 2) // prime numbers have exactly 2 factors
            printf("%d is a PRIME number.\n", num);
        else
            printf("%d is NOT a prime number.\n", num);
    }

    // ===== PART 2: Print all primes between 1 and a given number =====
    printf("\nEnter a number to print all primes up to it: ");
    scanf("%d", &num);

    printf("Prime numbers between 1 and %d are:\n", num);
    for (int n = 2; n <= num; n++) { // start from 2 (smallest prime)
        count = 0;
        for (i = 1; i <= n; i++) {
            if (n % i == 0) {
                count++;
            }
        }
        if (count == 2) {
            printf("%d ", n);
        }
    }
    printf("\n");

    return 0;
}
